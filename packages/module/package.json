{
  "name": "@wetrial/template",
  "version": "0.0.1",
  "description": "wetrial 模块化应用模块",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "access": "public",
    "directory": "dist",
    "registry": "http://172.16.170.34:8000/"
  },
  "files": [
    "dist",
    "lib",
    "es",
    "package.json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/umijs/hooks.git"
  },
  "scripts": {
    "patch": "yarn version --patch && git push origin master && git push origin --tags",
    "minor": "yarn version --minor && git push origin master && git push origin --tags",
    "major": "yarn version --major && git push origin master && git push origin --tags",
    "lint": "npm run lint:js && npm run lint:style && npm run lint:prettier",
    "lint-staged": "lint-staged",
    "lint-staged:js": "eslint --ext .js,.jsx,.ts,.tsx ",
    "lint:fix": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src && npm run lint:style",
    "lint:js": "eslint --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src",
    "lint:prettier": "prettier --check \"**/*\" --end-of-line auto",
    "lint:style": "stylelint --fix \"src/**/*.less\" --syntax less",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "test": "father test",
    "test:cov": "father test --coverage",
    "compile": "tsc --declarationDir ./lib && tsc --declarationDir ./es",
    "build": "father build && yarn compile"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write",
      "git add"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "git add"
    ]
  },
  "optionalDependencies": {
    "@wetrial/component": "*",
    "@wetrial/core": "*",
    "@wetrial/hooks": "*",
    "antd": "*",
    "classnames": "*",
    "dayjs": "*",
    "lodash": "*",
    "moment": "*",
    "path-to-regexp": "*",
    "qs": "*",
    "react": "*",
    "react-copy-to-clipboard": "*",
    "react-dom": "*",
    "react-helmet": "*",
    "redux": "*",
    "use-merge-value": "*"
  },
  "devDependencies": {
    "father": "^2.29.2",
    "typescript": "^3.8.3",
    "@umijs/preset-react": "^1.4.8"
  },
  "author": "xiexingen",
  "email": "1002275364@qq.com",
  "license": "MIT"
}
